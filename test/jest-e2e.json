{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "tsconfig": "./tsconfig.test.json"
      }
    ]
  },
  "moduleNameMapper": {
    "@modules/(.*)$": "<rootDir>/../src/modules/$1",
    "@config/(.*)$": "<rootDir>/../src/config/$1",
    "@test/(.*)$": "<rootDir>/$1"
  }
}
